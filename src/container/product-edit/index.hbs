<h5 class='text-primary'>Product edit</h5>
<div class='card'>
  <header class='card-title'>Information about product</header>
  <div class='card-body'>
    <form method='POST' action='/product-edit'>
      <div class='form-group'>
        <label for='name'>Name</label>
        <input
          type='name'
          name='name'
          class='form-control'
          value='{{product.name}}'
        />
      </div>
      <div class='form-group'>
        <label for='price'>Price</label>
        <input
          type='price'
          name='price'
          class='form-control'
          value='{{product.price}}'
        />
      </div>
      <div class='form-group'>
        <label for='id'>ID</label>
        <input
          type='id'
          name='id'
          class='form-control'
          value='{{product.id}}'
        />
      </div>
      <div class='form-group'>
        <label for='description'>Description</label>
        <input
          type='description'
          name='description'
          class='form-control'
          value='{{product.description}}'
        />
        <small
          id='information'
          class='form-text text-muted'
        >In the card</small>
      </div>
      <button type='submit' class='btn btn-primary'>Save
        Changes</button>
      |
      <a
        href='/product-delete?id={{product.id}}'
        class='btn btn-danger'
      >Delete</a>
    </form>
  </div>
</div>